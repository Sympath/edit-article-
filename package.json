{
  "name": "weiyi-tools",
  "displayName": "weiyi-tools",
  "description": "微医vscode工具箱，支持【自动编辑并格式化待发布的文章内容】、【自动生成项目格式化配置】、【右键启动live-server静态服务】等功能",
  "version": "0.0.21",
  "repository": "git@github.com:Sympath/weiyi-tools-plugin.git",
  "publisher": "wzyan8",
  "author": "wzyan8",
  "engines": {
    "vscode": "^1.66.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "images/logo.jpeg",
  "activationEvents": [
    "*"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "weiyi-tools",
      "properties": {
        "vscodePluginDemo.yourName": {
          "type": "string",
          "default": "guest",
          "description": "王志远"
        }
      }
    },
    "commands": [
      {
        "command": "weiyi-tools.formatArticle",
        "title": "formatArticle"
      },
      {
        "command": "weiyi-tools.formatOnSave",
        "title": "formatOnSave"
      },
      {
        "command": "weiyi-tools.openSelectedNovel",
        "title": "openSelectedNovel"
      },
      {
        "command": "weiyi-tools.insertLog",
        "title": "insertLog"
      },
      {
        "command": "weiyi-tools.liveServer",
        "title": "liveServer"
      },
      {
        "command": "weiyi-tools.formatProject",
        "title": "formatProject"
      },
      {
        "command": "weiyi-tools.toCamel",
        "title": "toCamel"
      },
      {
        "command": "weiyi-tools.mergePackage",
        "title": "mergePackage"
      }
    ],
    "keybindings": [
      {
        "key": "ctrl+shift+l",
        "command": "weiyi-tools.insertLog"
      },
      {
        "key": "cmd+shift+u",
        "command": "weiyi-tools.toCamel"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "editor.first.menu"
        }
      ],
      "explorer/context": [
        {
          "submenu": "explorer.first.menu"
        }
      ],
      "editor.first.menu": [
        {
          "command": "weiyi-tools.insertLog"
        },
        {
          "command": "weiyi-tools.toCamel"
        }
      ],
      "explorer.first.menu": [
        {
          "command": "weiyi-tools.formatProject"
        },
        {
          "command": "weiyi-tools.liveServer"
        }
      ]
    },
    "submenus": [
      {
        "when": "editorTextFocus",
        "id": "editor.first.menu",
        "label": "选中文字工具箱"
      },
      {
        "when": "explorerResourceIsFolder",
        "id": "explorer.first.menu",
        "label": "选中目录工具箱"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "live-server": "live-server",
    "http-server": "http-server",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.66.0",
    "eslint": "^7.27.0",
    "glob": "^7.2.3",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  },
  "dependencies": {
    "shelljs": "^0.8.5"
  }
}
