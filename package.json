{
  "name": "weiyi-tools",
  "displayName": "weiyi-tools",
  "description": "微医vscode工具箱，支持【自动编辑并格式化待发布的文章内容】、【自动生成项目格式化配置】、【右键启动live-server静态服务】等功能",
  "version": "0.0.17",
  "repository": "git@github.com:Sympath/edit-article-plugin.git",
  "publisher": "wzyan8",
  "author": "wzyan8",
  "engines": {
    "vscode": "^1.66.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "images/logo.jpeg",
  "activationEvents": [
    "*"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "edit-article",
      "properties": {
        "vscodePluginDemo.yourName": {
          "type": "string",
          "default": "guest",
          "description": "王志远"
        }
      }
    },
    "commands": [
      {
        "command": "edit-article.formatArticle",
        "title": "formatArticle"
      },
      {
        "command": "edit-article.formatOnSave",
        "title": "formatOnSave"
      },
      {
        "command": "edit-article.openSelectedNovel",
        "title": "openSelectedNovel"
      },
      {
        "command": "edit-article.insertLog",
        "title": "insertLog"
      },
      {
        "command": "edit-article.liveServer",
        "title": "liveServer"
      },
      {
        "command": "edit-article.formatProject",
        "title": "formatProject"
      },
      {
        "command": "edit-article.toCamel",
        "title": "toCamel"
      }
    ],
    "keybindings": [
      {
        "key": "ctrl+shift+l",
        "command": "edit-article.insertLog"
      },
      {
        "key": "cmd+shift+u",
        "command": "edit-article.toCamel"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorTextFocus",
          "command": "edit-article.insertLog",
          "group": "9_cutcopypaste"
        }
      ],
      "explorer/context": [
        {
          "when": "explorerResourceIsFolder",
          "command": "edit-article.liveServer",
          "group": "navigation"
        },
        {
          "when": "explorerResourceIsFolder",
          "command": "edit-article.formatProject",
          "group": "9_cutcopypaste"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.66.0",
    "eslint": "^7.27.0",
    "glob": "^7.2.3",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  },
  "dependencies": {
    "shelljs": "^0.8.5"
  }
}
